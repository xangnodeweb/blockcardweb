@page "/resetpassword"
@rendermode InteractiveServer
<MudPaper Class="w-100  border-radius-0 pb-3 pb-8 position-relative div-login " Elevation="0">
    <MudContainer Class="w-100 h-100 div-container max-width-none px-0">
        <MudCard Class="w-100  border-radius-0 pt-4 pb-3 pl-5 " Elevation="0">

            <MudIcon Icon="@Icons.Material.Filled.ArrowCircleLeft" @onclick="() => backtomain()" Class="f-55-px icon-back cursor-pointer" />
        </MudCard>

        <MudContainer Class="max-w-600-px  bg-default-gradient pt-10 pb-13 pb-72 ">

            <MudGrid Class="w-100 ma-0">

                <MudItem Class="pa-0" xs="12">
                    <MudCard Elevation="0" Class="border-radius-50  bg-white d-flex align-items-center justify-content-center m-auto w-135-px h-135-px">
                        <i class="zmdi zmdi-lock-open f-70-px">  </i>
                    </MudCard>
                </MudItem>
                <MudItem xs="12" Class="px-0 pb-0 pt-5 text-center">
                    <MudText Class="f-30-px color-white"> ກະລຸນາກຳນົດລະຫັດຜ່ານໃໝ່ </MudText>
                </MudItem>

                <MudItem xs="12" Class="pa-0 text-center d-flex flex-column">
                    <MudTextField T="string" Variant="Variant.Text" Placeholder="Input Old Password" @bind-Value="@UserRefreshModel.oldpassword" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Https" Class="f-21-px mt-50-px" />
                    <MudTextField T="string" Variant="Variant.Text" Placeholder="Input New Password" @bind-Value="@UserRefreshModel.newpassword" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Https" Class="f-21-px my-60-px" />


                    <MudTextField T="string" Variant="Variant.Text" Placeholder="Confirm New Password" @bind-Value="@UserRefreshModel.confirmpassword" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Https" Class="f-21-px" />

                    <MudButton Class="f-20-px bg-white border-radius-25-px mt-60-px h-60-px" @onclick="() => refreshPassword()">   ບັນທຶກການປ່ຽນລະຜ່ານ  </MudButton>


                </MudItem>

            </MudGrid>
        </MudContainer>



    </MudContainer>


</MudPaper>


<style>
    .bg-default-gradient {
        background: #9152f8;
        background: -webkit-linear-gradient(top, #00f7ff, #0080cb);
        background: -o-linear-gradient(top, #3100ff, #b224ef);
        background: -moz-linear-gradient(top, #7579ff, #b224ef);
        background: linear-gradient(top, #ac0000, #fffa00);
        border-radius: 10px;
    }

    .div-login {
        background: cadetblue;
        position: relative;
        height: 100%;
    }


    .mud-input > input.mud-input-root, div.mud-input-slot.mud-input-root {
        font-size: 26px;
        color: #FFFFFF;
    }

    .mud-icon-root.mud-svg-icon {
        fill: #FFFFFF;
    }

    .mud-input.mud-input-underline:after {
        border-bottom: 2px solid #FFFFFF;
    }

    .mud-input.mud-input-underline:before {
        border-bottom: 2px solid rgba(255,255,255, 0.24);
    }

    svg.icon-back.mud-icon-root.mud-svg-icon {
        fill: #000000;
    }

</style>

