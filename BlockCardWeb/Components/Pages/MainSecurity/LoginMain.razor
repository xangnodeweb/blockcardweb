

<MudPaper Class="w-100 image-bg position-relative bg-login pt-28-px " Style=" height: 100vh; padding-bottom : 24px; ">

    @* <MudImage Src="./image/bg-01.jpg" Class="w-100 position-absolute" Style="top: 0; left:0; height : 100vh;" /> *@

    <MudContainer Style="" Class=" div-login h-100 d-flex flex-column bg-wrap-login pt-32-px position-relative">

        <MudCard Elevation="0" Class="w-100 bg-none d-flex flex-column align-items-center">
            <MudCard Class="d-flex justify-content-center align-items-center " Style="width : 120px; height : 120px; border-radius: 50%; background : #FFFFFF; ">
                <i class="zmdi zmdi-google-drive f-60-px"> </i>
            </MudCard>
            <MudText Class="text-white f-30-px w-295-px text-center" Style=" margin-top : 12px; width : 295px;"> UVC - BLOCK CARD 2021 </MudText>
        </MudCard>
        <MudCard Elevation="0" Class="w-100 bg-none d-flex flex-column align-items-center px-5 mt-2">
            <MudTextField T="string" Variant="Variant.Text" AdornmentIcon="@Icons.Material.Filled.Person" Adornment="@Adornment.Start" AdornmentColor="Color.Secondary" Placeholder="USERNAME" Class="mb-3 f-18-px text-white w-100" Style="margin-top : 16px; font-size: 18px; color : #FFF;" />
            <MudCard Class="position-relative bg-none d-flex flex-row w-100 align-items-center" Elevation="0">

            <MudTextField T="string" Variant="Variant.Text" AdornmentIcon="@Icons.Material.Filled.Https" Adornment="@Adornment.Start"  Placeholder="PASSWORD" InputType="@passwordinput" Class="mb-3 w-100 f-18-px text-white input-password" Style=" margin-top : 16px;  font-size: 18px;">


            </MudTextField>
                <MudIcon Icon="@passwordinputicon" Class="position-absolute " @onclick="showpassword" Style="right: 0;" />
            </MudCard>
            <MudButton Class="w-100 h-50-px mt-30-px f-20-px btn-login" Style="border-radius : 25px; "> ເຂົ້າສູ່ລະບົບ  </MudButton>
        </MudCard>

        <MudContainer Class="w-100 d-flex flex-column align-items-center position-absolute " Style="bottom :25px; left: 0;">
            <MudCard Elevation="0" Class="m-auto bg-none py-4 d-flex flex-column align-items-center w-90" Style="border-top : 1px solid rgba(0,0,0,0.1); border-bottom : 1px solid rgba(0,0,0,0.1) ;">

                <MudText Class="text-white f-13-px"> CONTACT US </MudText>
                <MudText Class="text-white f-13-px"> Online Charging 021-244214 </MudText>
                <MudText Class="text-white f-13-px"> Mr.Oudomsak PHABOUDY 020-52555999 </MudText>

            </MudCard>

        </MudContainer>

    </MudContainer>


    @* <MudTextField T="string" Variant="Variant.Outlined" /> *@

</MudPaper>

<style>

    .bg-login {
        width: 100%;
        height: 100vh;
        background-repeat: no-repeat;
        background-size: cover;
