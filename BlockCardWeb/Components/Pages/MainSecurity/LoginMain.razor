        background-color: rgba(255,255, 255, 0.6);
        background-blend-mode: lighten;
    }

    div.mud-paper.bg-login::before {
        position: absolute;
        /* z-index: 1; */
        background-color: rgba(255, 255,255, 0.6);
        width: 100%;
        height: 100vh;
        z-index: -1;
        position: absolute;
        left: 0;
        top: 0;
    }

    .div-login {
        max-width: 600px;
    }

    .image-bg {
        /*    background-image: url(./image/bg-01.jpg); */
    }

    .f-60-px {
        font-size: 60px;
    }

    .bg-wrap-login {
        border-radius: 10px;
        background: #9152f8;
        background: -webkit-linear-gradient(top, #00f7ff, #0080cb);
        background: -o-linear-gradient(top, #3100ff, #b224ef);
        background: -moz-linear-gradient(top, #7579ff, #b224ef);
        background: linear-gradient(top, #ac0000, #fffa00);
    }

    .btn-login {
        background: #FFF;
    }

        .btn-login:hover {
            background: -webkit-linear-gradient(bottom,#04d5fb,#066dbb);
            color: #FFF;
            transition: all 0.2s;
        }

    /*   .pt-40-px {
            padding-top: 40px;
        }

        .pt-28-px {
            padding-top: 28px;
        } */

